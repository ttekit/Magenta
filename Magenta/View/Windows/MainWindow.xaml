<Window x:Class="Magenta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magenta"
        mc:Ignorable="d"
        Title="M.A.G.E.N.T.A" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="StartButton" Click="StartButton_OnClick">Start Recording</Button>
        <Button Grid.Row="1" x:Name="StopButton" Click="StopButton_OnClick">Stop Recording</Button>
    </Grid>
</Window>