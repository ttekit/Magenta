<Window x:Class="Magenta.View.Windows.WorkingVoicePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Magenta.View.Windows"
        mc:Ignorable="d"
        Title="WorkingVoicePage" Height="250" Width="250"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        WindowStartupLocation="Manual"
        Left="0" Top="0"
        Topmost="True"
        ShowActivated="False">
    <Grid Background="{x:Null}">
        <Ellipse x:Name="VoiceCircle" Fill="LightPink" Width="200" Height="200" />
    </Grid>
</Window>